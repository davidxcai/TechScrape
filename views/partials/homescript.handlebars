<script>
    $(document).on('click', '.save', function () {
        let id = $(this).attr('id');
        console.log('id: ' + id);
        $.ajax({
            method: "PUT",
            url: "save/" + id,
            data: {saved: true}
        })
        .then(data => {
            console.log(data);
        })
        .catch(err => {
            if (err) console.log(err);
        })
    });

</script>